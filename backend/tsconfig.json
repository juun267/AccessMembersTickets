{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "paths": {
      "@nestjs/*": ["node_modules/@nestjs/*"],
      "*": ["node_modules/*"]
    },
    "resolveJsonModule": true,
    "experimentalDecorators": true,  // Ensure this is enabled
    "emitDecoratorMetadata": true     // Required for NestJS reflection
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
